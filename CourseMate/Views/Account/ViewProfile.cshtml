@model CourseMate.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="row g-0">
                 
                    <div class="col-md-4 bg-light d-flex flex-column align-items-center justify-content-center p-4">
                        <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/images/default-avatar.png")"
                             alt="Profile Picture"
                             class="rounded-circle shadow mb-3"
                             width="160" height="160" />
                        <h4 class="fw-bold text-primary">@Model.FullName</h4>
                        <p class="text-muted">@Model.Email</p>
                        <p class="text-muted">@Model.Bio</p>
                    </div>

                    
                    <div class="col-md-8 p-5">
                        <h3 class="fw-bold mb-4">Profile Details</h3>
                        <p><strong>Full Name: </strong>@Model.FullName</p>
                        <p><strong>Email: </strong>@Model.Email</p>
                        <p><strong>Bio: </strong>@Model.Bio</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
