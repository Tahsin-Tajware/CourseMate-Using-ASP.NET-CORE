@model CourseMate.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="row g-0">

                  
                    <div class="col-md-4 bg-light d-flex flex-column align-items-center justify-content-center p-4">
                        <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/images/default-avatar.png")"
                             alt="Profile Picture"
                             class="rounded-circle shadow mb-3"
                             width="160" height="160" />

                        <h4 class="fw-bold text-primary">@Model.FullName</h4>
                        <p class="text-muted">@Model.Email</p>
                    </div>

                  
                    <div class="col-md-8 p-5">
                        <h3 class="fw-bold mb-4">Edit Profile</h3>

                        <form asp-action="MyProfile" method="post" enctype="multipart/form-data">
                            <div class="form-floating mb-3">
                                <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                                <label asp-for="FullName"></label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Email Address" />
                                <label asp-for="Email"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <textarea asp-for="Bio" class="form-control" style="height:120px" placeholder="Write about yourself..."></textarea>
                                <label asp-for="Bio"></label>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Profile Picture</label>
                                <input asp-for="ProfileImageFile" type="file" class="form-control" />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow">
                                    Save Changes
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
