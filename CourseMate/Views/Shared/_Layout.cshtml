<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CourseMate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #1e90ff;
            --brand-color: #FF5722;
            --secondary-color: #181818;
            --light-color: #f1f1f1;
            --dark-color: #e0e0e0;
            --hover-color: #3399ff;
            --bg-color: #121212;
            --card-bg: #1f1f1f;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            --transition: all 0.3s ease;
        }

        html, body {
            height: 100%;
            background-color: var(--bg-color);
            color: var(--dark-color);
        }

        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: var(--secondary-color);
            box-shadow: var(--shadow);
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--brand-color) !important;
            font-size: 1.5rem;
        }

        .nav-link {
            color: var(--dark-color) !important;
            margin: 0 0.5rem;
            transition: var(--transition);
        }

            .nav-link:hover {
                color: var(--hover-color) !important;
            }

        .container {
            flex: 1;
        }

        footer {
            background-color: var(--secondary-color);
            color: var(--light-color);
            padding: 1rem 0;
            margin-top: auto;
        }

            footer a {
                color: rgba(255, 255, 255, 0.7);
                text-decoration: none;
            }

                footer a:hover {
                    color: white;
                    text-decoration: underline;
                }

        .display-4 {
            font-weight: 700;
            color: var(--primary-color);
        }

        main {
            padding-bottom: 2rem;
        }

        .placeholder-box {
            background-color: var(--card-bg);
            border-radius: 8px;
            box-shadow: var(--shadow);
            padding: 2rem;
            margin-bottom: 2rem;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #bbb;
        }

        hr.bg-white-50 {
            border-color: rgba(255, 255, 255, 0.3);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CourseMate</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Admin">Admin</a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="User">Users</a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="placeholder-box">Content Block 1</div>
            <div class="placeholder-box">Content Block 2</div>
            <div class="placeholder-box">Content Block 3</div>
        </main>
    </div>
    <footer class="bg-dark text-white py-3">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="mb-3">CourseMate</h5>
                    <p class="mb-0">Your trusted platform for learning and course management.</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Home</a></li>
                        <li><a href="#" class="text-white-50">Privacy</a></li>
                        <li><a href="#" class="text-white-50">Admin</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="mb-3">Connect</h5>
                    <p class="mb-0">Follow us on social media for updates.</p>
                </div>
            </div>
            <hr class="my-3 bg-white-50" />
            <div class="row">
                <div class="col-12">
                    <p class="mb-0">
                        &copy; 2025 - CourseMate. All rights reserved.
                        <a href="#" class="text-white-50">Privacy Policy</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
