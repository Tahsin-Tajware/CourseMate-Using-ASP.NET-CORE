<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        :root {
            --primary-color: #1e90ff;
            --brand-color: #FF5722;
            --secondary-color: #181818;
            --light-color: #f1f1f1;
            --dark-color: #e0e0e0;
            --hover-color: #3399ff;
            --bg-color: #121212;
            --card-bg: #1f1f1f;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            --transition: all 0.3s ease;
        }

        html, body {
            height: 100%; /* Ensure html and body take full height */
            background-color: var(--bg-color);
            color: var(--dark-color);
            margin: 0; /* Remove default margins */
            padding: 0; /* Remove default padding */
        }

        body {
            font-family: 'Roboto', sans-serif;
            display: flex; /* Flexbox for layout */
            flex-direction: column; /* Stack children vertically */
            min-height: 100vh; /* Ensure body takes at least full viewport height */
        }

        .navbar {
            background-color: var(--secondary-color);
            box-shadow: var(--shadow);
            padding: 0.5rem 1rem;
            margin-left: 250px;
            width: calc(100% - 250px);
            position: fixed;
            top: 0;
            z-index: 999;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

        .nav-link {
            color: var(--dark-color) !important;
            margin: 0 0.5rem;
            transition: var(--transition);
        }

            .nav-link:hover {
                color: var(--hover-color) !important;
            }

        .main-content {
            margin-left: 250px;
            padding: 100px 20px 40px;
            width: calc(100% - 250px);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: calc(100vh - 140px); /* Adjust for navbar and footer height */
            text-align: center;
            flex: 1 0 auto; /* Allow main content to grow but not shrink below min-height */
        }

        .content-grid {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 30px;
        }

        .placeholder-box {
            background-color: var(--card-bg);
            border-radius: 8px;
            box-shadow: var(--shadow);
            padding: 2rem;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #bbb;
            width: 250px;
        }

        footer {
            background-color: var(--secondary-color);
            color: var(--light-color);
            padding: 0.8rem 0;
            margin-left: 250px;
            width: calc(100% - 250px);
            font-size: 14px;
            flex-shrink: 0; /* Prevent footer from shrinking */
        }

            footer .row {
                align-items: center;
                text-align: center;
            }

            footer h5 {
                font-size: 16px;
                margin-bottom: 8px;
            }

            footer p, footer a {
                font-size: 13px;
            }

        hr.bg-white-50 {
            margin: 8px 0;
        }

        .display-4 {
            font-weight: 700;
            color: var(--primary-color);
        }

        main {
            width: 100%;
        }

        /* --- AI Chat styles --- */
        #aiChatBtn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: var(--brand-color);
            color: white;
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 24px;
            box-shadow: var(--shadow);
            cursor: pointer;
            z-index: 1000;
        }

        #aiChatPopup {
            position: fixed;
            bottom: 90px;
            right: 20px;
            width: 420px;
            height: 550px;
            background: var(--card-bg);
            border-radius: 12px;
            box-shadow: var(--shadow);
            display: none;
            flex-direction: column;
            z-index: 1000;
            overflow: hidden;
        }

        #aiChatHeader {
            background: var(--primary-color);
            color: white;
            padding: 12px;
            font-weight: bold;
            border-radius: 12px 12px 0 0;
            text-align: center;
            font-size: 16px;
            height: 48px;
        }

        #aiChatMessages {
            flex: 1;
            padding: 12px;
            overflow-y: auto;
            font-size: 14px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: thin;
            scrollbar-color: #555 #333;
            height: calc(100% - 108px);
            box-sizing: border-box;
        }

            #aiChatMessages::-webkit-scrollbar {
                width: 8px;
            }

            #aiChatMessages::-webkit-scrollbar-track {
                background: #333;
            }

            #aiChatMessages::-webkit-scrollbar-thumb {
                background: #555;
                border-radius: 4px;
            }

                #aiChatMessages::-webkit-scrollbar-thumb:hover {
                    background: #777;
                }

        .chat-msg {
            padding: 10px 14px;
            border-radius: 16px;
            max-width: 75%;
            line-height: 1.4;
            display: inline-block;
            word-wrap: break-word;
            white-space: pre-wrap;
            font-size: 14px;
        }

        .chat-user {
            background: var(--primary-color);
            color: white;
            align-self: flex-end;
            border-bottom-right-radius: 4px;
        }

        .chat-ai {
            background: #333;
            color: white;
            align-self: flex-start;
            border-bottom-left-radius: 4px;
        }

        #aiChatInput {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            border-top: 1px solid #444;
            background: #1a1a1a;
            height: 60px;
            z-index: 2;
        }

            #aiChatInput input {
                flex: 1;
                border: none;
                padding: 12px;
                background: #222;
                color: white;
                font-size: 14px;
                outline: none;
            }

            #aiChatInput button {
                border: none;
                padding: 12px 18px;
                background: var(--brand-color);
                color: white;
                cursor: pointer;
                font-size: 16px;
                transition: background 0.2s ease;
            }

                #aiChatInput button:hover {
                    background: #e64a19;
                }
    </style>
</head>
<body>
    <partial name="_SidebarPartial" />

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Admin">Admin</a></li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="User">Users</a></li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-2">
                    <h5>CourseMate</h5>
                    <p>Your trusted platform for learning and course management.</p>
                </div>
                <div class="col-md-4 mb-2">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50">Home</a></li>
                        <li><a href="#" class="text-white-50">Privacy</a></li>
                        <li><a href="#" class="text-white-50">Admin</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Connect</h5>
                    <p>Follow us on social media for updates.</p>
                </div>
            </div>
            <hr class="my-2 bg-white-50" />
            <div class="row">
                <div class="col-12">
                    <p>&copy; 2025 - CourseMate. All rights reserved. <a href="#" class="text-white-50">Privacy Policy</a></p>
                </div>
            </div>
        </div>
    </footer>

    <button id="aiChatBtn">💬</button>
    <div id="aiChatPopup">
        <div id="aiChatHeader">AI Assistant</div>
        <div id="aiChatMessages"></div>
        <div id="aiChatInput">
            <input type="text" id="aiInput" placeholder="Type a message..." />
            <button id="aiSend">➤</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $("#aiChatBtn").click(function () {
            checkAuthAndToggle();
        });

        function checkAuthAndToggle() {
            $.get("/Account/IsAuthenticated", function (data) {
                if (data.authenticated) {
                    $("#aiChatPopup").toggle();
                    if ($("#aiChatPopup").is(":visible")) {
                        scrollToBottom();
                    }
                } else {
                    window.location.href = "/Account/Login";
                }
            });
        }

        function scrollToBottom() {
            const $messages = $("#aiChatMessages");
            $messages.scrollTop($messages[0].scrollHeight);
        }

        $("#aiSend").click(function () {
            checkAuthAndSend();
        });

        function checkAuthAndSend() {
            $.get("/Account/IsAuthenticated", function (data) {
                if (data.authenticated) {
                    let msg = $("#aiInput").val();
                    if (!msg) return;
                    $("#aiChatMessages").append(`<div class="chat-msg chat-user">${msg}</div>`);
                    $("#aiInput").val("");
                    scrollToBottom();
                    $.post("/AiChat/Ask", { message: msg }, function (data) {
                        $("#aiChatMessages").append(`<div class="chat-msg chat-ai">${data}</div>`);
                        scrollToBottom();
                    });
                } else {
                    window.location.href = "/Account/Login";
                }
            });
        }

        $("#aiInput").keypress(function (e) {
            if (e.which === 13) {
                checkAuthAndSend();
                return false;
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>