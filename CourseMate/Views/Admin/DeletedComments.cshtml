<!-- Views/Admin/DeletedComments.cshtml -->
@model IEnumerable<CourseMate.Models.Comment>

@{
    ViewData["Title"] = "Deleted Comments";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 20;
}

<h1>Deleted Comments</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.Any())
{
    <div class="card bg-dark">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Original Content</th>
                            <th>Author</th>
                            <th>Deleted By</th>
                            <th>Deleted At</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comment in Model)
                        {
                            <tr>
                                <td>@comment.Content</td>
                                <td>@(comment.IsAnonymous ? "Anonymous" : comment.User?.UserName)</td>
                                <td>@(comment.DeletedByUser?.UserName ?? "User")</td>
                                <td>@comment.DeletedAt?.ToString("g")</td>
                                <td>
                                    <span class="badge @(comment.IsRemovedByModerator ? "bg-danger" : "bg-warning")">
                                        @(comment.IsRemovedByModerator ? "Moderator Removal" : "User Deletion")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Post", new { id = comment.PostId })"
                                            class="btn btn-info btn-sm" title="View Context">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <form asp-action="RestoreComment" method="post" class="d-inline">
                                            <input type="hidden" name="commentId" value="@comment.Id" />
                                            <button type="submit" class="btn btn-success btn-sm" title="Restore Comment">
                                                <i class="fas fa-undo"></i>
                                            </button>
                                        </form>

                                        <form asp-action="PermanentlyDeleteComment" method="post" class="d-inline">
                                            <input type="hidden" name="commentId" value="@comment.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" title="Permanently Delete"
                                                onclick="return confirm('Are you sure you want to permanently delete this comment? This action cannot be undone.')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav aria-label="Deleted comments navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="DeletedComments" asp-route-page="@(currentPage - 1)"
                                asp-route-pageSize="@pageSize">Previous</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="DeletedComments" asp-route-page="@i"
                                    asp-route-pageSize="@pageSize">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="DeletedComments" asp-route-page="@(currentPage + 1)"
                                asp-route-pageSize="@pageSize">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        No deleted comments found.
    </div>
}

<div class="mt-3">
    <a asp-action="ReportedComments" class="btn btn-outline-info">Back to Reported Comments</a>
</div>