<!-- Views/Admin/ReportedComments.cshtml -->
@model IEnumerable<CourseMate.Models.ReportedComment>

@{
    ViewData["Title"] = "Reported Comments";
    var statusFilter = ViewBag.StatusFilter as string ?? "Pending";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 20;
}

<h1>Reported Comments</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Filter Section -->
<div class="card mb-4 bg-dark">
    <div class="card-body">
        <h5 class="card-title">Filter Reports</h5>
        <div class="btn-group" role="group">
            <a asp-action="ReportedComments" asp-route-statusFilter="All"
                class="btn @(statusFilter == "All" ? "btn-primary" : "btn-secondary")">All</a>
            <a asp-action="ReportedComments" asp-route-statusFilter="Pending"
                class="btn @(statusFilter == "Pending" ? "btn-primary" : "btn-secondary")">Pending</a>
            <a asp-action="ReportedComments" asp-route-statusFilter="Reviewed"
                class="btn @(statusFilter == "Reviewed" ? "btn-primary" : "btn-secondary")">Reviewed</a>
            <a asp-action="ReportedComments" asp-route-statusFilter="Resolved"
                class="btn @(statusFilter == "Resolved" ? "btn-primary" : "btn-secondary")">Resolved</a>
            <a asp-action="ReportedComments" asp-route-statusFilter="Rejected"
                class="btn @(statusFilter == "Rejected" ? "btn-primary" : "btn-secondary")">Rejected</a>
        </div>
    </div>
</div>

<!-- Reports Table -->
<div class="card bg-dark">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Comment Content</th>
                            <th>Author</th>
                            <th>Reported By</th>
                            <th>Reason</th>
                            <th>Reported At</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>
                                    @if (report.Comment.IsDeleted)
                                    {
                                        <span class="text-muted">[deleted by user]</span>
                                    }
                                    else if (report.Comment.IsRemovedByModerator)
                                    {
                                        <span class="text-muted">[removed by moderator]</span>
                                    }
                                    else
                                    {
                                        @report.Comment.Content
                                    }
                            </td>
                            <td>@(report.Comment.IsAnonymous ? "Anonymous" : report.Comment.User?.UserName)</td>
                            <td>@report.User.UserName</td>
                            <td>@report.Reason</td>
                            <td>@report.ReportedAt.ToString("g")</td>
                            <td>
                                <span class="badge 
                                            @(report.Status == ReportStatus.Pending ? "bg-warning" :
                                                                                report.Status == ReportStatus.Reviewed ? "bg-info" : 
                                                                                report.Status == ReportStatus.Resolved ? "bg-success" : 
                                                                                "bg-danger")">
                                        @report.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Post", new { id = report.Comment.PostId })"
                                            class="btn btn-info btn-sm" title="View Context">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (report.Status == ReportStatus.Pending || report.Status == ReportStatus.Reviewed)
                                        {
                                            @if (!report.Comment.IsDeleted && !report.Comment.IsRemovedByModerator)
                                            {
                                                <form asp-action="RemoveComment" method="post" class="d-inline">
                                                    <input type="hidden" name="commentId" value="@report.CommentId" />
                                                    <input type="hidden" name="reportId" value="@report.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Remove Comment">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (report.Comment.IsRemovedByModerator)
                                            {
                                                <form asp-action="ApproveComment" method="post" class="d-inline">
                                                    <input type="hidden" name="commentId" value="@report.CommentId" />
                                                    <input type="hidden" name="reportId" value="@report.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm" title="Approve Comment">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }

                                            <form asp-action="RejectReport" method="post" class="d-inline">
                                                <input type="hidden" name="reportId" value="@report.Id" />
                                                <button type="submit" class="btn btn-secondary btn-sm" title="Reject Report">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (totalPages > 1)
            {
                <nav aria-label="Reported comments navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="ReportedComments" asp-route-statusFilter="@statusFilter"
                                asp-route-page="@(currentPage - 1)" asp-route-pageSize="@pageSize">Previous</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="ReportedComments" asp-route-statusFilter="@statusFilter"
                                    asp-route-page="@i" asp-route-pageSize="@pageSize">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="ReportedComments" asp-route-statusFilter="@statusFilter"
                                asp-route-page="@(currentPage + 1)" asp-route-pageSize="@pageSize">Next</a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info">
                No reports found with the current filter.
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="DeletedComments" class="btn btn-outline-info">View Deleted Comments</a>
</div>