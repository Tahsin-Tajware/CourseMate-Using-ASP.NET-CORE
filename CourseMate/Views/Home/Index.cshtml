@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center my-5">
        <h1 class="display-4 fw-bold mb-4">Welcome, @User.Identity.Name!</h1>
        <p class="lead mb-5">Explore your courses and manage your learning journey with CourseMate.</p>
        <a asp-controller="Home" asp-action="Privacy" class="btn btn-primary btn-lg px-4">Get Started</a>
    </div>
}
else
{
    <div class="text-center my-5">
        <h1 class="display-4 fw-bold mb-4">Welcome to CourseMate</h1>
        <p class="lead mb-5">Learn about building web apps with ASP.NET Core.</p>
        <a asp-controller="Home" asp-action="Privacy" class="btn btn-primary btn-lg px-4">Get Started</a>
    </div>
}


<partial name="_HomeContentPartial" />