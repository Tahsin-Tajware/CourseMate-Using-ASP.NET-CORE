@model IEnumerable<CourseMate.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container">
    <div class="welcome-section">
        <h1 class="welcome-heading">
            Welcome to <span class="brand">CourseMate</span>
        </h1>
        <p class="welcome-subtitle" id="typing-text"></p>
    </div>

    <div class="recent-posts-section">
        <div class="section-header">
            <h2 class="section-title">Latest Discussions</h2>
            <p class="section-description">Explore the most recent posts from our academic community</p>
        </div>

        @if (Model.Any())
        {
            <div class="posts-list">
                @foreach (var post in Model)
                {
                    <partial name="_PostCard" model="post" />
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">📚</div>
                <h3>No posts yet</h3>
                <p>Be the first to start a discussion in our community</p>
                <a asp-controller="Post" asp-action="Create" class="btn-primary">Create First Post</a>
            </div>
        }
    </div>

    <partial name="_HomeContentPartial" />
</div>

<style>
    :root {
        --primary-text: #e8eaed;
        --secondary-text: #9aa0a6;
        --accent-color: #8ab4f8;
        --accent-hover: #a8c7fa;
        --background: #121212;
        --card-bg: #1f1f1f;
        --card-border: #3c4043;
        --section-spacing: 2rem;
        --navbar-height: 60px;
        --gradient-1: #ff6b6b;
        --gradient-2: #4ecdc4;
        --gradient-3: #45b7d1;
        --gradient-4: #96ceb4;
    }

    body {
        background-color: var(--background);
        color: var(--primary-text);
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        padding-top: 0;
        margin: 0;
    }

    .home-container {
        margin-top: 0 !important; 
        padding-top: 0; 
    }



    .welcome-section {
        text-align: center;
        margin-bottom: var(--section-spacing);
        padding: 2rem 1rem;
        background: linear-gradient(135deg, rgba(138, 180, 248, 0.15) 0%, rgba(255, 107, 107, 0.1) 50%, rgba(78, 205, 196, 0.1) 100%);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3), inset 0 1px 1px rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
        margin-top: 0;
    }

        .welcome-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(138, 180, 248, 0.1) 0%, transparent 70%);
            animation: rotate 15s linear infinite;
            pointer-events: none;
        }

    @@keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .welcome-heading {
        font-size: 2.8rem;
        font-weight: 800;
        margin: 0 0 1rem 0;
        color: var(--primary-text);
        letter-spacing: -0.5px;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
        position: relative;
        z-index: 2;
    }

    .brand {
        background: linear-gradient(135deg, var(--gradient-1), var(--gradient-2), var(--gradient-3), var(--gradient-4));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        background-size: 300% 300%;
        animation: gradientShift 4s ease infinite;
        position: relative;
        display: inline-block;
        padding: 0 3px;
    }

 

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .welcome-subtitle {
        font-size: 1.2rem;
        color: var(--primary-text);
        margin: 0 auto;
        font-weight: 400;
        line-height: 1.5;
        min-height: 1.5em;
        max-width: 100%;
        white-space: nowrap;
        overflow: hidden;
        position: relative;
        z-index: 2;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
        padding: 0 10px;
    }

    .typing-cursor {
        display: inline-block;
        width: 2px;
        height: 1.2em;
        background: linear-gradient(to bottom, var(--gradient-2), var(--gradient-3));
        margin-left: 3px;
        animation: blink 1s infinite;
        vertical-align: middle;
        border-radius: 1px;
    }

    @@keyframes blink {
        0%, 50% {
            opacity: 1;
        }

        51%, 100% {
            opacity: 0;
        }
    }

    .recent-posts-section {
        margin-bottom: var(--section-spacing);
    }

    .section-header {
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-text);
        margin: 0 0 0.8rem 0;
        position: relative;
        display: inline-block;
        background: linear-gradient(135deg, var(--accent-color), var(--gradient-2));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 70px;
            height: 3px;
            background: linear-gradient(90deg, var(--gradient-1), var(--gradient-4));
            border-radius: 3px;
        }

    .section-description {
        font-size: 1.1rem;
        color: var(--secondary-text);
        margin: 0;
        font-style: italic;
    }

    .posts-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 3rem;
    }

    .empty-state {
        text-align: center;
        padding: 2.5rem 2rem;
        background-color: var(--card-bg);
        border-radius: 14px;
        border: 1px solid var(--card-border);
        background: linear-gradient(135deg, rgba(138, 180, 248, 0.1), rgba(78, 205, 196, 0.1));
    }

    .empty-icon {
        font-size: 3.5rem;
        margin-bottom: 1.2rem;
        display: block;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-15px);
        }

        60% {
            transform: translateY(-7px);
        }
    }

    .empty-state h3 {
        font-size: 1.4rem;
        color: var(--primary-text);
        margin: 0 0 0.8rem 0;
    }

    .empty-state p {
        color: var(--secondary-text);
        margin: 0 0 1.8rem 0;
        font-size: 1rem;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1.8rem;
        background: linear-gradient(135deg, var(--gradient-1), var(--gradient-2));
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        position: relative;
        overflow: hidden;
    }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
        }

            .btn-primary:hover::before {
                left: 100%;
            }

    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .welcome-section {
        animation: fadeInUp 0.8s ease-out;
    }

    .section-header {
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .posts-list {
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

   
    @@media (max-width: 768px) {
        .home-container {
            padding: 0.5rem 1rem 0.5rem;
        }

        .welcome-heading {
            font-size: 2.2rem;
        }

        .welcome-subtitle {
            font-size: 1.1rem;
            white-space: normal;
            min-height: auto;
        }

        .section-title {
            font-size: 1.7rem;
        }

        .welcome-section {
            padding: 1.8rem 1rem;
            margin-top: 0.3rem;
        }

        .brand {
            padding: 0 2px;
        }
    }

    @@media (max-width: 480px) {
        .welcome-heading {
            font-size: 1.9rem;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .empty-icon {
            font-size: 3rem;
        }

        .welcome-section {
            padding: 1.5rem 0.8rem;
        }

        .welcome-subtitle {
            font-size: 1rem;
        }

        .empty-state {
            padding: 2rem 1.5rem;
        }
    }
</style>

<script>

    document.addEventListener('DOMContentLoaded', function() {
        const text = "Your academic companion for sharing knowledge, resources, and insights";
        const typingElement = document.getElementById('typing-text');
        let index = 0;
        let cursorVisible = true;

     
        const cursor = document.createElement('span');
        cursor.className = 'typing-cursor';
        typingElement.appendChild(cursor);

        function type() {
            if (index < text.length) {
          
                const textNode = document.createTextNode(text.charAt(index));
                typingElement.insertBefore(textNode, cursor);
                index++;
                setTimeout(type, 40); 
            } else {
               
                setInterval(() => {
                    cursor.style.opacity = cursorVisible ? '1' : '0';
                    cursorVisible = !cursorVisible;
                }, 500);
            }
        }

        
        setTimeout(type, 800);
    });
</script>