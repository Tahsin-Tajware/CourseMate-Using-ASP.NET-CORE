@model IEnumerable<CourseMate.Models.Post>
@{
    ViewData["Title"] = "My Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-content {
        background-color: #030303;
        min-height: 100vh;
        padding: 30px 20px;
        margin-left: 130px;
        width: calc(100% - 130px);
        transition: margin-left 0.3s ease;
    }

    .container-custom {
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 40px;
    }

    .header-custom {
        background-color: #1a1a1b;
        padding: 30px 60px;
        border-radius: 12px 12px 0 0;
        margin-bottom: 30px;
    }

        .header-custom h1 {
            font-size: 36px;
            font-weight: 600;
            color: #e4e6eb;
            margin-bottom: 12px;
        }

    .breadcrumb-custom {
        font-size: 1.1rem;
        color: #818384;
    }

        .breadcrumb-custom a {
            color: #4fbcff;
            text-decoration: none;
        }

            .breadcrumb-custom a:hover {
                text-decoration: underline;
            }

    .form-container {
        display: flex;
        flex-direction: column;
        background-color: #1a1a1b;
        border-radius: 12px;
        padding: 30px 60px;
    }

    .post-list {
        display: flex;
        flex-direction: column;
        gap: 30px;
        width: 100%;
    }

    .post-item {
        background-color: #121212;
        border: 1px solid #343536;
        border-radius: 12px;
        padding: 30px;
        transition: all 0.3s ease;
    }

        .post-item:hover {
            background-color: #1a1a1b;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .post-title {
        color: #e4e6eb;
        font-size: 24px;
        margin-bottom: 14px;
        font-weight: 500;
    }

        .post-title a {
            color: inherit;
            text-decoration: none;
        }

            .post-title a:hover {
                color: #4fbcff;
            }

    .post-meta {
        color: #9a9c9e;
        margin-bottom: 16px;
        font-size: 1rem;
    }

    .post-content {
        color: #d7dadc;
        line-height: 1.8;
        margin-bottom: 20px;
        font-size: 17px;
    }

    .tags-container {
        display: flex;
        justify-content: center; /* center align */
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 14px;
    }

    .tag-item {
        background-color: #0079d3;
        color: #f1f1f1;
        padding: 8px 18px;
        border-radius: 16px;
        font-size: 1rem;
        font-weight: 500;
        text-align: center;
    }

    .post-link {
        color: #0079d3;
        text-decoration: none;
    }

        .post-link:hover {
            text-decoration: underline;
            color: #4fbcff;
        }

    .anonymous-tag {
        color: #f1f1f1;
        background-color: #0079d3;
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 0.9rem;
        margin-left: 10px;
    }

    .vote-count {
        color: #d7dadc;
        font-size: 1rem;
        margin-top: 15px;
        display: flex;
        align-items: center;
        gap: 25px;
        justify-content: center; /* center votes */
    }

    .vote-group {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .vote-arrow {
        cursor: pointer;
        font-size: 22px; /* bigger arrows */
        font-weight: bold;
        color: #0079d3; /* normal blue */
        transition: color 0.2s ease;
    }

        .vote-arrow:hover {
            color: #4fbcff; /* hover blue */
        }

    .no-posts {
        color: #818384;
        text-align: center;
        padding: 30px;
        font-size: 18px;
    }

    .debug-message {
        color: #ff6b6b;
        font-size: 1rem;
        margin-bottom: 20px;
        font-weight: 500;
    }
</style>

<div class="main-content">
    <div class="container-custom">
        <div class="header-custom">
            <h1>My Posts</h1>
            <div class="breadcrumb-custom">
                <a asp-controller="Home" asp-action="Index">CourseMate</a> • <span>My Posts</span>
            </div>
        </div>
        <div class="form-container">
            @if (TempData["InfoMessage"] != null)
            {
                <p class="debug-message">@TempData["InfoMessage"]</p>
            }
            <div class="post-list">
                @if (Model.Any())
                {
                    foreach (var post in Model)
                    {
                        <div class="post-item">
                            <h2 class="post-title">
                                <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="post-link">@post.Title</a>
                                @if (post.IsAnonymous)
                                {
                                    <span class="anonymous-tag">Anonymous</span>
                                }
                            </h2>
                            <div class="post-meta">
                                Posted by:
                                @if (post.IsAnonymous)
                                {
                                    <span>Anonymous</span>
                                }
                                else
                                {
                                    <a href="@Url.Action("ViewProfile", "Post", new { id = post.User.Id })" class="post-link">@post.User?.FullName</a>
                                }
                                on @post.CreatedAt.ToString("g")
                            </div>

                            <div class="post-content">
                                @post.Content
                            </div>
                            <div class="tags-container">
                                @foreach (var tag in post.Tags)
                                {
                                    <span class="tag-item">@tag.CourseName (@tag.CourseCode) - @tag.Varsity</span>
                                }
                            </div>
                            <div class="vote-count">
                                <div class="vote-group">
                                    <span class="vote-arrow">↑</span>
                                    <span>@post.Votes.Count(v => v.IsUpvote)</span>
                                </div>
                                <div class="vote-group">
                                    <span class="vote-arrow">↓</span>
                                    <span>@post.Votes.Count(v => !v.IsUpvote)</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="no-posts">You have no posts yet.</p>
                }
            </div>
        </div>
    </div>
</div>
