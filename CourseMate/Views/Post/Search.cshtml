@model IEnumerable<CourseMate.Models.Post>
@{
    ViewData["Title"] = "Search Results";
}
<style>
    body {
        background-color: #242424; 
    }

    .card {
        background-color: #e9ecef;
        border: 1px solid #dee2e6; 
    }

    .card-title a {
        color: #0d6efd; 
    }

        .card-title a:hover {
            color: #0b5ed7; 
        }

    .text-muted {
        color: #6c757d !important; 
    }

    .badge {
        background-color: #6c757d; 
        color: white;
    }

    .alert {
        border: 1px solid #dee2e6;
    }

    .pagination .page-link {
        color: #0d6efd;
        background-color: #e9ecef; 
        border: 1px solid #dee2e6;
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }
</style>

<div class="container mt-4">
    <h1 class="mb-4" style="color: orange;">Search Results</h1>

    <!-- Search Info -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchString))
    {
        <div class="alert alert-info">
            <strong>Search Results for:</strong> "@ViewBag.SearchString"
            @if (ViewBag.TotalCount > 0)
            {
                <span> - Found @ViewBag.TotalCount result(s)</span>
            }
        </div>
    }
    <!-- Search Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-controller="Post" asp-action="Search" method="get" class="row g-3">
                <input type="hidden" name="searchString" value="@ViewBag.SearchString" />
                <div class="col-md-6">
                    <label class="form-label text-dark">Search In:</label>
                    <select name="searchType" class="form-select">
                        <option value="all" selected="@(ViewBag.SearchType == "all")">All Content</option>
                        <option value="title" selected="@(ViewBag.SearchType == "title")">Titles Only</option>
                        <option value="content" selected="@(ViewBag.SearchType == "content")">Content Only</option>
                        <option value="course" selected="@(ViewBag.SearchType == "course")">Courses Only</option>
                        <option value="comments" selected="@(ViewBag.SearchType == "comments")">Comments Only</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Refine Search</button>
                </div>
            </form>
        </div>
    </div>
    <!-- Search Results -->
    @if (Model.Any())
    {
        foreach (var post in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none">
                            @post.Title
                        </a>
                    </h5>
                    <div class="mb-2">
                        @if (post.IsAnonymous)
                        {
                            <span class="text-muted">Posted anonymously</span>
                        }
                        else
                        {
                            <span class="text-muted">By @post.User.UserName</span>
                        }
                        <span class="text-muted"> on @post.CreatedAt.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <p class="card-text text-dark">
                        @if (post.Content.Length > 200)
                        {
                            @post.Content.Substring(0, 200)
                            <span class="text-dark">...</span>
                        }
                        else
                        {
                            @post.Content
                        }
                    </p>
                    <div class="d-flex flex-wrap gap-2 mb-2">
                        @foreach (var tag in post.Tags)
                        {
                            <span class="badge bg-secondary">@tag.CourseCode - @tag.CourseName</span>
                        }
                    </div>
                    <div class="d-flex text-muted small">
                        <div class="me-3">
                            <i class="fas fa-comments"></i> @post.Comments.Count comments
                        </div>
                        <div>
                            <i class="fas fa-thumbs-up"></i> @post.Votes.Count(v => v.IsUpvote) votes
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Search results pages">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Search"
                               asp-route-searchString="@ViewBag.SearchString"
                               asp-route-searchType="@ViewBag.SearchType"
                               asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else if (!string.IsNullOrEmpty(ViewBag.SearchString))
    {
        <div class="alert alert-warning">
            No results found for your search. Try different keywords or search in different categories.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Enter a search term to find posts.
        </div>
    }
</div>
